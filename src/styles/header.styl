.header {
    display: flex;
    width: 100%;
    height: 100vh;
    background-color $backgroundColor;
    justify-content: center;
    align-items: center;
    }

.content {
    width: 80%;
    height: 80%;
    background-color: $white;
    }

+below(600px) {

    justify-content: flex-start;

    .content {
        width: 100%;
        height: 500px;
        }
}